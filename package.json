{
  "name": "multi-account-git-manager",
  "displayName": "Multi-Account Git Manager",
  "description": "Manage multiple GitHub accounts and switch between them based on repository context",
  "license": "MIT",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "publisher": "kirankumar",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "github",
    "account",
    "multi-account",
    "ssh"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitManager.addAccount",
        "title": "Git Manager: Add Account"
      },
      {
        "command": "gitManager.removeAccount",
        "title": "Git Manager: Remove Account"
      },
      {
        "command": "gitManager.switchAccount",
        "title": "Git Manager: Switch Account"
      },
      {
        "command": "gitManager.configureRepo",
        "title": "Git Manager: Configure Repository Account"
      },
      {
        "command": "gitManager.listAccounts",
        "title": "Git Manager: List Accounts"
      }
    ],
    "configuration": {
      "title": "Git Account Manager",
      "properties": {
        "gitManager.accounts": {
          "type": "array",
          "default": [],
          "description": "List of configured Git accounts (tokens stored securely in SecretStorage)"
        },
        "gitManager.repoMappings": {
          "type": "object",
          "default": {},
          "description": "Repository to account mappings"
        },
        "gitManager.autoSwitch": {
          "type": "boolean",
          "default": true,
          "description": "Automatically switch accounts based on repo configuration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kiran178/git-account-manager"
  }
}